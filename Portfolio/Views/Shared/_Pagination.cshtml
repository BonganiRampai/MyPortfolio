@* Example usage: pass currentPage, totalPages, and a URL base or route values *@
@model PaginationModel

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage - 1)" tabindex="-1">Previous</a>
        </li>

        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")" aria-current="@(i == Model.CurrentPage ? "page" : null)">
                <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>

